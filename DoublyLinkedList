package linkedlist;

/**
 *
 * @author Danny
 */
import java.util.Scanner;
public class LinkedList {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
    } 
    
    ///creating a node///
    public static class node{
        public int element;
        node prev;
        node next;
        
         public node(int e){
        element = e;
        }
    }
    
    ///Creating the doublylinkedlist class///
    public static class doublylinkedlist{
    
        public static node start;
        public static node end;
        public static  int size;
        
        //Constuctor
        public doublylinkedlist(){
            start = null;
            end = null;
            size = 0;
        }
        public void deleteEnd(){
            end = end.prev;
            size--;
        }
        //Boolean to check if empty. If start returns null, list is still empty.
        public static boolean Empty(){
            return start == null;
        }
        //Checking the size of the list
        public static int getSize(){
            return size;
        }
       
        //Inserting numbers from end of list
        public static void insertnum(int num){
            node newnum = new node(num);
             if(Empty()){
                start = newnum;
            }
            else{
                end.next = newnum;
                newnum.prev = end;
            }
            end = newnum;
            size++;
        }
        //print method
        public void print(){
            node current = start;
            while (current != null){
		System.out.println(current.element);
		current = current.next;
            }
        }
    }
    
    //Method to take input, index through, and convert each index to a number.
    //Each number is then stored in a node, and returned.
    public static doublylinkedlist index(){
        Scanner input = new Scanner(System.in);
        System.out.println("Enter a number: ");
        String istring = input.next();
        doublylinkedlist list1 = new doublylinkedlist();
        for (int i = 0, x = istring.length(); i < x; i++){
           int variable = istring.charAt(i) - 48 ;
            list1.insertnum(variable);
            System.out.println(variable);
        }   
        System.out.println("Enter another number: ");
        String ostring = input.next();
        doublylinkedlist list2 = new doublylinkedlist();
        for (int i = 0, x = ostring.length(); i < x; i++){
           int variable = ostring.charAt(i) - 48 ;
            list2.insertnum(variable);
            System.out.println(variable);          
        }
        System.out.println(list1.getSize());
        return list1;
    }
}

